      <TraceLevelOverride LogPrefix="Runtime.MembershipOracle" TraceLevel="Verbose" />
      <TraceLevelOverride LogPrefix="Runtime.Dispatcher" TraceLevel="Verbose2" />
      <TraceLevelOverride LogPrefix="Runtime.Message" TraceLevel="Verbose" />
      <TraceLevelOverride LogPrefix="Runtime.Catalog" TraceLevel="Verbose" />
      <TraceLevelOverride LogPrefix="GrainAssemblyLoader" TraceLevel="Warning" />
      -->
    </Tracing>
    <Statistics MetricsTableWriteInterval="30s" PerfCounterWriteInterval="30s" LogWriteInterval="300s" StatisticsCollectionLevel="Info"/>
  </Defaults>
  <ClusterGateways>
    <Gateway Address="localhost" Port="21111" Cluster="0"/>
    <Gateway Address="localhost" Port="21116" Cluster="1"/>
    <LookupTimeout Seconds="30" Milliseconds="100" />
    <InterClusterDelay FromCluster="0" ToCluster="1" Delay="1"/>
    <InterClusterDelay FromCluster="1" ToCluster="0" Delay="1"/>
  </ClusterGateways>
  <Override Node="Primary">
    <Networking Port="21111"/>
    <ProxyingGateway Address="localhost" Port="22221"/>
  </Override>
  <Override Node="Secondary_1">
    <Networking Port="21112"/>
    <ProxyingGateway Address="localhost" Port="22222" />
  </Override>
  <Override Node="Secondary_2">
    <Networking Port="21113"/>
    <ProxyingGateway Address="localhost" Port="22223" />
  </Override>
  <Override Node="Secondary_3">
    <Networking Port="21114"/>
  </Override>
  <Override Node="Secondary_4">
    <Networking Port="21115"/>
  </Override>
</OrleansConfiguration>