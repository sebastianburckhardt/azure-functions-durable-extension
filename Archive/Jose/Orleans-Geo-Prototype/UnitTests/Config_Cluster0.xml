<?xml version="1.0" encoding="utf-8" ?>
<OrleansConfiguration xmlns="urn:orleans">
  <Globals>
    <Cluster Id="0"/>
    <SeedNode Address="localhost" Port="21111"/>
    <Messaging ResponseTimeout="30s" SiloSenderQueues="5" GatewaySenderQueues="5" MaxResendCount="0"/>
    <Liveness LivenessType ="MembershipTableGrain" LivenessEnabled="true" ProbeTimeout = "5s" TableRefreshTimeout ="10s" DeathVoteExpirationTimeout ="80s"
              NumMissedProbesLimit = "3" NumProbedSilos="3" NumVotesForDeathDeclaration="2" UseLivenessGossip="true"
              IAmAliveTablePublishTimeout = "60s" NumMissedTableIAmAliveLimit="3" MaxJoinAttemptTime="300s" ExpectedClusterSize="2"/>
    <ReminderService ReminderServiceType ="ReminderTableGrain"/>
    <Directory ReplicationFactor="0"/>
    <Application>
      <GrainType Type="UnitTestGrains.IdleActivationGcTestGrain2">
        <Deactivation AgeLimit="10s"/>
      </GrainType>
      <GrainType Type="UnitTestGrains.BusyActivationGcTestGrain2">
        <Deactivation AgeLimit="10s"/>
      </GrainType>
    </Application>
  </Globals>
  <Defaults>
    <Networking Address="localhost" Port="0"/>
    <Scheduler MaxActiveThreads="2"/>
    <Tracing DefaultTraceLevel="Info" TraceToConsole="true" TraceToFile="{0}-{1}.log" PropagateActivityId="false" WriteMessagingTraces="false" BulkMessageLimit="1000">
