@{
    ViewBag.Title = "Start Page";
}


<div class="container" style="top: 0em; width: 100%; bottom: 0em; margin-left: 0em; position: absolute;">
    <div id="scrollbox" style="top: 1em; width: 100%; bottom: 2.4em; color: white; padding-left: 0.2em; font-family: Consolas,Menlo,Monaco,Lucida Console,Liberation Mono,DejaVu Sans Mono,Bitstream Vera Sans Mono,Courier New,monospace,sans-serif; position: absolute; -ms-overflow-y: scroll; background-color: rgba(0, 50, 51, 1);">
        <ul id="discussion" style="list-style-type:none; margin-top: 3em; padding-left:0em"></ul>
    </div>
    <input type="text" id="message" style="width: 30em; height: 2em; bottom: 0em; position: absolute;" />
    <input type="button" id="sendmessage" style="left: 31em; bottom: 0em; position: absolute;" value="Go" />
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.commandHub;
            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (name, message) {
                // Add the message to the page.
                $('#discussion').append('<li><strong style="color:yellow">' + htmlEncode(name)
                    + '</strong> ' + htmlEncode(message) + '</li>');
                // scroll the console to the bottom
                var sb = document.getElementById("scrollbox");
                sb.scrollTop = sb.scrollHeight;
            };
            var submit = function () {
                // Call the Send method on the hub.
                chat.server.send($('#message').val());
                // Clear text box and reset focus for next comment.
                $('#message').val('').focus();
            }
            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                chat.server.send("");
                $('#sendmessage').click(submit);
                $('#message').keypress(function (event) {
                    if (event.keyCode == 13) {
                        submit();
                    }
                });
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}


